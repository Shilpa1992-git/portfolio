---
import Layout from "../../layouts/Layout.astro";
import Heading from "../../components/ui/Heading.astro";
import { Icon } from "astro-icon/components";

const pageTitle = "DevOps Engineering Blog | Shilpa Salunkhe";
const pageDescription = "Welcome to my DevOps blog, where I share my learning journey about Docker, Kubernetes, Jenkins, CI/CD, and modern DevOps tools.";
const OGImage = {
  url: "/images/ogdevopsblog.webp",
  alt: "DevOps Engineering Blog by Shilpa Salunkhe - Docker, Kubernetes, Jenkins, CI/CD, and Modern DevOps Tools"
};
---

<Layout pageTitle={pageTitle} description={pageDescription} ogimage={OGImage}>
  <section class="w-full px-8 mt-5 max-sm:px-4 py-4 flex flex-col items-center">
    <div class="flex flex-col gap-8 max-w-4xl w-full pb-10 pt-8 mt-8 max-sm:mt-0 px-14 max-md:px-10 max-sm:px-6 dark:bg-transparent bg-white dark:border-0 border border-neutral-100 rounded-2xl">
      <div class="flex gap-4 items-center justify-center">
        <Icon class="text-3xl dark:text-white text-blacktext" name="blog" />
        <Heading text="DevOps" textGradient="Blog" level={1} />
      </div>
      
      <p class="text-center text-lg text-blacktext dark:text-zinc-300 leading-relaxed">
        Welcome to my DevOps blog! I share my learning journey about 
        <span class="bg-linear-to-r from-riptide-400 to-mint-500 dark:to-mint-200 dark:from-riptide-300 text-transparent bg-clip-text font-semibold">Docker, Kubernetes, Jenkins, CI/CD</span>, 
        and modern DevOps tools.
      </p>

      <div class="flex flex-col items-center justify-center py-16 gap-6">
        <Icon class="text-6xl dark:text-zinc-500 text-zinc-400" name="file-lines" />
        <p class="text-xl text-center text-zinc-500 dark:text-zinc-400">
          Coming Soon!
        </p>
        <p class="text-center text-zinc-500 dark:text-zinc-500 max-w-md">
          I'm working on exciting DevOps content. Stay tuned for tutorials, guides, and insights about cloud technologies and automation.
        </p>
      </div>
    </div>
  </section>
</Layout>
